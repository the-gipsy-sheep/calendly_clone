<tr id="<%= dom_id apointment %>">
  <td class="border border-slate-300 bg-white text-left p-4">
    <%= form_with(model: apointment, method: :patch) do |form| %>
      <%= form.select :status, options_for_select(Apointment.statuses.map { |key, value| [key.capitalize, key] }, form.object.status), {}, { class: input_class, onchange: "this.form.submit()"} %>
    <% end %>
  </td>
  <td class="border border-slate-300 bg-white text-left p-4"><%= apointment.name %></td>
  <td class="border border-slate-300 bg-white text-left p-4"><%= apointment.email %></td>
  <td class="border border-slate-300 bg-white text-left p-4"><%= apointment.start_at.strftime('%b %e, %Y at %l:%M %p') %></td>
  <td class="border border-slate-300 bg-white text-left p-4"><%= apointment.end_at.strftime('%b %e, %Y at %l:%M %p') %></td>
  <td class="border border-slate-300 bg-white text-left p-4"><%= apointment.apointment_type.name %></td>
  <td class="border border-slate-300 bg-white text-left p-4"><%= apointment.apointment_type.payment_required? ? "Yes" : "No" %></td>
</tr>
