<div class="max-5-xl mx-auto pb-8 rounded shadow-xl">
  <div class="px-6 py-10 rounded-t-xl bg-gray-50">
    <h1 class="text-3xl text-center font-extrabold"><%= @user.name %>'s Apointment Page</h1>
    <p class="text-center text-gray-600 mt-2">Apoint your prefered time slot using the apointment options below.</p>
  </div>
  <div class="grid grid-cols-3 gap-6 px-8 pt-8">
    <% @user.apointment_types.each do |apointment_type| %>
      <%= render "users/apointment_type", apointment_type: apointment_type %>
    <% end %>
  </div>
</div>
